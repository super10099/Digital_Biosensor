<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/sampleLabel"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="SAMPLE"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/RGBLabel"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:gravity="center_vertical"
            android:text="AVG. RGB"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/AlphaLabel"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:gravity="center_vertical"
            android:text="AVG. R Val"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/BetaLabel"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:gravity="center_vertical"
            android:text="R Val STD"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/TransformedValueLabel"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:gravity="center_vertical"
            android:text="Transformed Val"
            android:textSize="12sp"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/ComparativeValueLabel"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginStart="35dp"
            android:gravity="center_vertical"
            android:text="S/N"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
